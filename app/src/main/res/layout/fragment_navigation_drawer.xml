<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigationDrawerBg"
    tools:context="com.mws3000.bestfriendspethotel.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageViewDrawer"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/drawer_margin_top"
            android:src="@drawable/jennlogo" />

    </LinearLayout>

    <TextView
        android:id="@+id/textServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containerDrawerImage"
        android:layout_centerHorizontal="true"
        android:text="@string/services"
        android:textSize="@dimen/drawer_font"
        android:textColor="@color/secondaryText"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textServices"
        android:layout_marginLeft="@dimen/drawer_margin_left">

        </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/textContactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/our_contacts"
        android:textSize="@dimen/drawer_font"
        android:textColor="@color/secondaryText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/drawerList"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
